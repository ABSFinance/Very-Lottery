{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.19"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "no-empty-blocks": "warn",
    "no-inline-assembly": "warn",
    "not-rely-on-time": "warn",
    "avoid-low-level-calls": "warn",
    "avoid-sha3": "warn",
    "max-line-length": ["warn", 120],
    "quotes": ["error", "double"],
    "indent": ["error", 4],
    "no-unused-vars": "warn",
    "no-empty-functions": "warn",
    "no-global-import": "warn",
    "no-console": "warn",
    "no-delete-array": "warn",
    "no-explicit-type": "warn",
    "no-extra-semicolon": "warn",
    "no-inline-assembly": "warn",
    "no-return": "warn",
    "no-throw": "warn",
    "no-unused-vars": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "reason-string": "warn",
    "reentrancy": "warn",
    "security/no-block-members": "warn",
    "security/no-call-value": "warn",
    "security/no-inline-assembly": "warn",
    "security/no-low-level-calls": "warn",
    "security/no-sha3": "warn",
    "security/no-throw": "warn",
    "security/no-tx-origin": "warn",
    "security/no-unused-vars": "warn",
    "security/no-var": "warn",
    "security/prefer-const": "warn",
    "security/reentrancy": "warn",
    "security/valid-payable": "warn"
  }
}
